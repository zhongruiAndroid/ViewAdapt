<?xml version="1.0" encoding="utf-8"?>
<com.zhongrui.LinearLayoutAdapt xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7283B2EC"
    android:orientation="vertical"
    app:uiAdaptWidth="true"
    app:uiDesignHeight="1000dp"
    app:uiDesignWidth="1000dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试1fδÀjklgjλi"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="71px"
            android:text="测试2"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            />
        <com.test.viewadapt.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试22"
            android:textSize="20sp"
            android:background="#B59BEF"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="参照宽度适配"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btTest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="参照高度适配"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btTest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动态添加设置view宽高"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbFullScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全屏"
            android:textAllCaps="false" />

        <CheckBox
            android:id="@+id/cbAdaptCutout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全屏适配刘海屏幕"
            android:textAllCaps="false" />

        <CheckBox
            android:id="@+id/cbHiddenNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏虚拟按键"
            android:textAllCaps="false" />
    </LinearLayout>

    <com.zhongrui.LinearLayoutAdapt
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:uiAdaptWidth="true"
        app:uiDesignHeight="1000dp"
        app:uiDesignWidth="1000dp">

        <com.zhongrui.TextViewAdapt
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/test_shape"
            app:drawableAdaptEnable="false" />

        <com.zhongrui.TextViewAdapt
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/test_shape" />
    </com.zhongrui.LinearLayoutAdapt>

    <com.zhongrui.LinearLayoutAdapt
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:uiAdaptWidth="true"
        app:uiDesignHeight="1000px"
        app:uiDesignWidth="1000px">

        <com.zhongrui.TextViewAdapt
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:background="@drawable/test_layer"
            app:drawableAdaptEnable="false" />

        <com.zhongrui.ImageButtonAdapt
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/test_layer"
            app:layout_adapt_width="1000px" />
    </com.zhongrui.LinearLayoutAdapt>
</com.zhongrui.LinearLayoutAdapt>