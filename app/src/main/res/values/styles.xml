<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="LayoutAdaptAttr">@style/test1</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="LayoutAdaptAttr">@style/test2</item>
    </style>
    <style name="test1" parent="LayoutAdaptStyle">
        <item name="uiAdaptEnable">true</item>
        <item name="uiDesignWidth">4000px</item>
        <item name="uiDesignHeight">4000px</item>
    </style>
    <style name="test2">
        <item name="uiAdaptEnable">true</item>
        <item name="uiDesignWidth">3000px</item>
    </style>
    <style name="test3">
        <item name="uiAdaptEnable">true</item>
        <item name="uiDesignWidth">2000px</item>
    </style>
</resources>